# RENAME THIS FILE TO .ENV

# Discord bot token for peregrine
# Get from the Discord Developer portal
DISCORD_BOT_TOKEN=token

# token for Watchtower - can be any value
WATCHTOWER_HTTP_API_TOKEN=token
# logging channels for Watchtower
# see https://containrrr.dev/shoutrrr/v0.6/services/overview/ for format
WATCHTOWER_LOG_CHANNEL=discord://token@id

# webhook for notifications about new sections
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/YOUR_WEBHOOK_HERE"

# Postgres Credentials
PG_HOSTNAME="postgres_image"
PG_DATABASE="postgres"
PG_USERNAME="postgres"
PG_DATABASE="password"
PG_PORT="5432"